---
import type {Race} from '../../../components/types';
import MatchupLayout from "../../../layouts/MatchupLayout.astro";
import {MatchupDetails} from '../../../components/MatchupDetails';

export function getStaticPaths() {
  return [
    {params: {race: 'Protoss', opponentRace: 'Protoss'}},
    {params: {race: 'Protoss', opponentRace: 'Terran'}},
    {params: {race: 'Protoss', opponentRace: 'Zerg'}},
    {params: {race: 'Terran', opponentRace: 'Protoss'}},
    {params: {race: 'Terran', opponentRace: 'Terran'}},
    {params: {race: 'Terran', opponentRace: 'Zerg'}},
    {params: {race: 'Zerg', opponentRace: 'Protoss'}},
    {params: {race: 'Zerg', opponentRace: 'Terran'}},
    {params: {race: 'Zerg', opponentRace: 'Zerg'}},
  ];
}

const {race, opponentRace} = Astro.params;
---
<MatchupLayout race={race as Race} opponentRace={opponentRace as Race}>
  <MatchupDetails />
</MatchupLayout>
